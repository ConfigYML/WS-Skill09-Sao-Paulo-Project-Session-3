<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_3_Dennis_Hilfinger.InteractiveMapPage"
             Title="">
    <Grid 
RowDefinitions="*, 5*, *"
ColumnDefinitions="*"
VerticalOptions="Fill"
HorizontalOptions="Fill">
        <Grid 
    ColumnDefinitions="*,4*,*"
    HorizontalOptions="Fill"
    VerticalOptions="End">
            <Image 
        Source="logo_2015_full_colour.png"
        Margin="20"/>
            <Label 
        Grid.Column="1"
        FontSize="40"
        Text="MarathonSkills 2015"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"
        Padding="20"/>
        </Grid>

        <ScrollView
    Grid.Row="1"
    VerticalOptions="Start">
            <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">

                <Label 
            Text="Interactive Map"
            HorizontalOptions="Center"
            FontSize="32" />

                <Grid ColumnDefinitions="*,*">
                    <AbsoluteLayout>
                        <Image 
                            Source="marathon_map.jpg"
                            HeightRequest="600"
                            WidthRequest="600"
                            AbsoluteLayout.LayoutBounds="1, 1"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="100 450"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="250 550"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="340 400"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="430 370"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="450 250"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="350 120"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="210 80"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                        <Button 
                            WidthRequest="20"
                            HeightRequest="20"
                            BackgroundColor="{StaticResource PrimaryYellow}"
                            Margin="100 230"
                            AbsoluteLayout.LayoutBounds="1, 1"
                            IsEnabled="True"/>
                    </AbsoluteLayout>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <Label 
    x:Name="TimerLabel"
    Grid.Row="2"
    HorizontalOptions="Fill"
    VerticalOptions="End"
    Text="0 days 0 hours and 0 minutes until the race starts!"
    HorizontalTextAlignment="Center"
    Padding="20"
    Style="{StaticResource TimerLabel}"/>
    </Grid>
</ContentPage>